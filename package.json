{
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "test": "turbo test",
    "test:e2e": "turbo test --filter=@mfe-orchestrator/e2e",
    "test:e2e:ui": "pnpm --filter @mfe-orchestrator/e2e test:ui",
    "test:e2e:headed": "pnpm --filter @mfe-orchestrator/e2e test:headed",
    "test:e2e:debug": "pnpm --filter @mfe-orchestrator/e2e test:debug",
    "test:e2e:codegen": "pnpm --filter @mfe-orchestrator/e2e test:codegen",
    "test:e2e:report": "pnpm --filter @mfe-orchestrator/e2e test:report",
    "typecheck": "turbo typecheck",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "lefthook": "^2.0.8",
    "turbo": "^2.6.3"
  }
}
